# ==============================
# App Configuration
# ==============================
PORT=2342
NODE_ENV=development

# ==============================
# Bcrypt Configuration
# ==============================
# The number of rounds to use for bcrypt hashing (10 is a reasonable default)
BCRYPT_SALT_ROUNDS=10

# ==============================
# JWT Configuration
# ==============================
# Secret key used to sign and verify JWTs
JWT_SECRET=yourJwtSecret
# The expiration time for the JWT token (e.g., 5 days)
JWT_EXPIRED_IN=5d

# Access & Refresh Tokens
JWT_ACCESS_SECRET=yourAccessTokenSecret
JWT_ACCESS_EXPIRES_IN=15d
JWT_REFRESH_SECRET=yourRefreshTokenSecret
JWT_REFRESH_EXPIRES_IN=7d

# OTP Token for JWT
JWT_OTP_SECRET=yourOtpTokenSecret
JWT_OTP_EXPIRED_IN=1m

# ==============================
# Stripe Configuration
# ==============================
# Your Stripe secret key (used for payment processing)
STRIPE_SECRET_KEY=yourStripeSecretKey
# Webhook secret for verifying incoming Stripe webhooks
STRIPE_WEBHOOK_SECRET=yourStripeWebhookSecret

# ==============================
# Cloudinary Configuration
# ==============================
# Cloudinary credentials for image/file uploads
CLOUDINARY_CLOUD_NAME=yourCloudName
CLOUDINARY_API_KEY=yourCloudinaryApiKey
CLOUDINARY_API_SECRET=yourCloudinaryApiSecret

# ==============================
# Email Configuration (SMTP)
# ==============================
# SMTP configuration for sending emails
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=yourEmail@gmail.com
MAIL_PASS=yourEmailAppPassword
MAIL_FROM_NAME=YourApp Support
MAIL_FROM_EMAIL=yourEmail@gmail.com

# Password Reset UI Link (to reset password on frontend)
RESET_PASS_UI_LINK=http://localhost:5173/reset

# ==============================
# Client URL (for frontend app)
# ==============================
CLIENT_URL=http://localhost:5173

# ==============================
# Database Configuration
# ==============================
# PostgreSQL Database credentials
POSTGRES_USER=yourPostgresUser
POSTGRES_PASSWORD=yourPostgresPassword
POSTGRES_DB=yourPostgresDb
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# ==============================
# Admin Configuration
# ==============================
# Admin credentials (ensure these are set securely in production)
ADMIN_EMAIL=yourAdminEmail@example.com
ADMIN_PASSWORD=yourAdminPassword
ADMIN_NAME=Admin
ADMIN_PHONE=+1234567890

# ==============================
# Twilio Configuration (Optional)
# ==============================
# Uncomment and fill these values if using Twilio for messaging
# TWILIO_ACCOUNT_SID=yourTwilioAccountSID
# TWILIO_AUTH_TOKEN=yourTwilioAuthToken
# TWILIO_FROM_NUMBER=yourTwilioPhoneNumber
# TWILIO_VERIFY_SERVICE_SID=yourTwilioVerifyServiceSID

# ==============================
# Google OAuth Configuration
# ==============================
# Google OAuth credentials for social login
GOOGLE_CLIENT_ID=yourGoogleClientID
GOOGLE_CLIENT_SECRET=yourGoogleClientSecret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/otp/google/callback

# ==============================
# Redis Configuration
# ==============================
# Redis connection settings (used for caching, session management, etc.)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CONNECTION_URL=redis://redis:6379
